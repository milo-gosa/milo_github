  keywords = {Flares {Sunkaques,SUN} {Particle acceleration,Helioseismology}},
  owner = {Donea, Cally},
  timestamp = {2009.03.18},
  url = {http://adsabs.harvard.edu/abs/2007PhDT........24H}
}



